<% title "Posts", false %>

<% for post in @posts %>
  <div class="post">
    <p class="post-date pull-right"><%= post.created_at.strftime('%d %b') %></p>
    <h2 class="title"><%= link_to post.title, post %></h2>
    <div class="body">
      <p>
      <%=h post.body.html_safe %>
      </p>
    </div>
    <p>
      <%= link_to "Read more ...", post %>
    </p>
    <p>
      <% post.categories.each do |cat| %>
        <span class="badge"><%= cat %></span>
      <% end %>
    </p>
    <hr/>
  </div>
<% end %>
