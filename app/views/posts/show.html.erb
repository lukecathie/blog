<div class="post">
	<% title @post.title %>

	<p class="post-date"><%= @post.created_at.strftime('%d %b') %></p>

    <div class="body">
      <p><%=h @post.body.html_safe %></p>
  	</div>

	<% if user_signed_in? %>
	  <p>
	    <%= link_to "Edit", edit_post_path(@post) %> |
	    <%= link_to "Destroy", @post, :confirm => 'Are you sure?', :method => :delete %> |
	    <%= link_to "View All", posts_path %>
	  </p>
	<% end %>
</div>